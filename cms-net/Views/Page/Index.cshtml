@model IEnumerable<cms_net.Models.Page>

@{
    ViewData["Title"] = "View";
}

<h1>View</h1>

<p>
    <a asp-action="Create">Crea Nuova Pagina</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Modifica</a>
                 <a asp-action="Details" asp-route-id="@item.Id">Visualizza</a>
            </td>
        </tr>
}
    </tbody>
</table>

@model List<Component>


@{
    int pageId = (int)ViewData["pageId"];
}

<p>
    <a asp-action="Create">Componenti in Pagina</a>
</p>

@if (Model.Count() == 0)
{
    <h2>Nessun componente presente in pagina</h2>
}
else{
<table class="table">
    <thead>
        <tr>
            <th>
                Nome componente
            </th>
            <th>
                Azioni
            </th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
               @item.ComponentDefinitionKey
            </td>
       
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
}

 <a asp-action="Select" asp-controller="Component"  asp-route-id="@pageId">Crea Nuovo Componente</a>
